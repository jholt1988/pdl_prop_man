{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/app/*":["./*"],
      "@/components/*": ["./components*"],
      "@/features/*": ["features/*"],
      "@/lib/*": ["lib/*"],
      "@/lib/store": ["store/*"], 
      "@/api/*":["api/*"]
    }, 
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "nodenext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx":"react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js" ,
    "**/*.jsx"],
  "exclude": [
    "node_modules"
  ]
  }

